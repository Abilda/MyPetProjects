@model DatabaseFirst.Models.Doctors
@{
    ViewBag.Title = "Удаление доктора";
}

<div>
    <dl class="dl-horizontal">
        <dt>ФИО</dt>
        <dd>
            @Html.DisplayFor(model => model.Firstname)
            @Html.DisplayFor(model => model.Familyname)
            @Html.DisplayFor(model => model.Middlename)
        </dd>
        <dt>Специализация</dt>
        <dd>
            @Html.DisplayFor(model => model.Specialization.Name)
        </dd>
        <dt>Создан</dt>
        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>
    <div>
        <form asp-controller="Home" asp-action="DeleteDoctor" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>