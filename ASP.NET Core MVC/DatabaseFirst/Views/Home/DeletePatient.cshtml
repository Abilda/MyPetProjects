@model DatabaseFirst.Models.Patients
@{
    ViewBag.Title = "Удаление пациента";
}

<div>
    <dl class="dl-horizontal">
        <dt>ФИО</dt>
        <dd>
            @Html.DisplayFor(model => model.Firstname)
            @Html.DisplayFor(model => model.Familyname)
            @Html.DisplayFor(model => model.Middlename)
        </dd>
        <dt>ИИН</dt>
        <dd>
            @Html.DisplayFor(model => model.Iin)
        </dd>
        <dt>Адрес</dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>Телефон</dt>
        <dd>
            @Html.DisplayFor(model=>model.Phonenumber)
        </dd>
        <dt>Создан</dt>
        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>
    <div>
        <form asp-controller="Home" asp-action="DeletePatient" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>